  <p>
    <%= render :partial => "past_appointments_list.html.erb" %>
  </p>
  <!-- list of all past appointments without reviews -->
</div>
<div class="book_new_appointment">
  <!-- button/link to calender populated with open appointments-  :"/appointments" -->
